- gameHash = gameSudoku.getHash()
- divId = 'game-sudoku-' + gameHash

.sudoku-table(id='#{divId}', data-hash=gameSudoku.getHash(), ondragstart='return false;', ondrop='return false;')

    include board

    include control/block-numpad

    .sudoku-game-info
        .time-container
            | Time:
            span.time
        .difficulty-container
            | Difficulty:
            span.difficulty